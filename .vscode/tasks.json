{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"options": {
		"cwd": "${workspaceFolder}",
		"shell": {
			"executable": "powershell",
			"args": ["-ExecutionPolicy", "Unrestricted", "-NoProfile", "-File"]
		},
		"env": {
			"VS_INSTALL_DIR": "auto-detect",
			"EXTRA_LIB_PATH": "auto-download"

			// If the script fails to automatically handle these (or you want it to run faster or something), you can hardcode the paths
			// "VS_INSTALL_DIR": "C:/Program Files/Microsoft Visual Studio/2022/Community",
			// "EXTRA_LIB_PATH": "C:/Users/EXAMPLE_USER/Documents/Irvine"
		},
		"statusbar": {
			"filePattern": ".*\\.asm"
		}
	},
	"presentation": {
		"echo": false,
		"reveal": "always",
		"focus": false,
		"panel": "shared",
		"showReuseMessage": false,
		"clear": true
	},
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "${cwd}/.vscode/masm.ps1",
			"args": ["build", "\"${file}\"", "\"${fileBasenameNoExtension}\""],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"statusbar": {
					"label": "$(tools) Build"
				}
			}
		},
		{
			"label": "build + run",
			"type": "shell",
			"command": "${cwd}/.vscode/masm.ps1",
			"args": ["buildrun", "\"${file}\"", "\"${fileBasenameNoExtension}\""],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"statusbar": {
					"label": "$(play) Build + Run"
				}
			}
		},
		{
			"label": "debug",
			"type": "shell",
			"command": "${cwd}/.vscode/masm.ps1",
			"args": ["debug", "\"${file}\"", "\"${fileBasenameNoExtension}\""],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"statusbar": {
					"label": "$(debug-alt) Debug"
				}
			}
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "echo todo",
			"group": {
				"kind": "none"
			},
			"options": {
				"statusbar": {
					"hide": true
				}
			}
		}
	]
}

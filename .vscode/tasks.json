{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
            "executable": "powershell",
            "args": [
                "-ExecutionPolicy",
                "Unrestricted",
                "-NoProfile",
                "-File",
            ],
        },
		"statusbar": {
			"filePattern" : ".*\\.asm"
		}
    },
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "${cwd}/.vscode/masm.ps1",
            "args": [
                "build",
                "${file}",
                "${fileBasenameNoExtension}",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
			"options": {
				"statusbar": {
					"label": "$(tools) Build"
				}
			},
        },
        {
            "label": "debug",
            "type": "shell",
            "command": "${cwd}/.vscode/masm.ps1",
            "args": [   
                "debug",
                "${file}",
                "${fileBasenameNoExtension}",       
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
			"options": {
				"statusbar": {
					"label": "$(debug-alt) Debug"
				}
			},
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "echo todo",
            "group": {
                "kind": "build",
            }
        }
    ]
}
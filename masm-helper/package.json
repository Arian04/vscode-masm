{
	"name": "masm-helper",
	"displayName": "MASM Helper",
	"publisher": "arianb",
	"repository": {
		"type": "git",
		"url": "https://github.com/Arian04/vscode-masm.git",
		"directory": "masm-helper"
	},
	"description": "",
	"version": "1.0.0",
	"extensionDependencies": [
		"blindtiger.masm"
	],
	"engines": {
		"vscode": "^1.90.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"activationEvents": [
		"onCommand:workbench.action.tasks.runTask"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"taskDefinitions": [
			{
				"type": "masm"
			}
		],
		"snippets": [
			{
				"language": "masm",
				"path": "./snippets/masm.json"
			},
			{
				"language": "masm",
				"path": "./snippets/masm-irvine.json"
			}
		],
		"configuration": {
			"title": "MASM",
			"properties": {
				"masm-helper.assembler.includePaths": {
					"order": 0,
					"type": "array",
					"items": {
						"type": "string"
					},
					"description": "Specifies paths to search for library include files"
				},
				"masm-helper.linker.libraryPaths": {
					"order": 1,
					"type": "array",
					"items": {
						"type": "string"
					},
					"description": "Specifies paths to search for library files"
				},
				"masm-helper.linker.libraries": {
					"order": 2,
					"type": "array",
					"items": {
						"type": "string"
					},
					"description": "Specifies names of library files to link with"
				},

				"masm-helper.experimental.automaticallySetupIrvine": {
					"order": 3,
					"type": "boolean",
					"default": false,
					"description": "Automatically download and configure the Irvine library"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "pnpm run package",
		"compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
		"check-types": "tsc --noEmit",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.9",
		"@types/node": "20.x",
		"@types/vscode": "^1.90.0",
		"@typescript-eslint/eslint-plugin": "^8.15.0",
		"@typescript-eslint/parser": "^8.15.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"@vscode/vsce": "^3.2.1",
		"esbuild": "^0.24.0",
		"eslint": "^9.13.0",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.6.3"
	}
}
